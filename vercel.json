{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/webhook.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/check-reminders.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "api/webhook.js"
    },
    {
      "src": "/api/check-reminders",
      "dest": "api/check-reminders.js",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/(.*)",
      "dest": "api/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS", "HEAD"]
    }
  ],
  "crons": [
    {
      "path": "/api/check-reminders",
      "schedule": "* * * * *"
    }
  ]
}
