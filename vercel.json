{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/webhook.js"
    },
    {
      "src": "/api/check-reminders",
      "dest": "/api/check-reminders.js"
    },
    {
      "src": "/",
      "dest": "/api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/check-reminders",
      "schedule": "* * * * *"
    }
  ]
}
