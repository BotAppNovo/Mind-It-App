{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/webhook.js"
    },
    {
      "src": "/cron-recurrent",
      "dest": "/api/cron-recurrent.js"
    },
    {
      "src": "/api/lembretes-pwa",
      "dest": "/api/lembretes-pwa.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/webhook.js"
    }
  ],
  "crons": [
    {
      "path": "/cron-recurrent",
      "schedule": "* * * * *"
    }
  ]
}
